<Window x:Class="WpfAppAbonents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppAbonents"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <Label HorizontalAlignment="Center" Content="Авторизация" FontSize="30"></Label>
            <Label HorizontalAlignment="Left" Content="Эмейл" FontSize="20"></Label>
            <TextBox x:Name="emailTB" HorizontalAlignment="Left" Width="300" Height="30"></TextBox>
            <Label HorizontalAlignment="Left" Content="Пароль" FontSize="20"></Label>
            <TextBox x:Name="passwordTB" HorizontalAlignment="Left" Width="300" Height="30"></TextBox>
            <Button x:Name="authBTN" Content="Войти" Height="30" Margin="0,20,0,0" Click="authBTN_Click"></Button>
            <Button x:Name="regBTN" Content="Зарегистрироваться" Height="30" Margin="0,20,0,0" Click="regBTN_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
